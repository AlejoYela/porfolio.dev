---
import CodeIcon from "../icons/CodeIcon.astro";
import DnaIcon from "../icons/DnaIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import ColombiaIcon from "../icons/ColombiaIcon.astro";
import PdfIcon from "../icons/PdfIcon.astro";
import SocialPill from "./SocialPill.astro";
---

<aside
    id="logo-sidebar"
    class="hidden md:block md:fixed py-6 left-10 z-40 w-80 h-dvh transition-transform sm:translate-x-0"
    aria-label="Sidebar"
>
    <div class="h-full px-3 py-4 overflow-y-auto bg-gray-800 rounded-lg bg-opacity-60 flex flex-col justify-between">
      <div>
        <a href="https://flowbite.com/" class="flex gap-4 items-center ps-2.5 mb-5  py-3 rounded-md bg-white/20 shadow-lg">
          <img src="images/foto-aayb.png" class="rounded-full size-16" alt="">
          <span
                class="self-center text-xl font-semibold whitespace-nowrap dark:text-white"
            >
                Alejandro Yela.
            </span>
        </a>

        <div class="flex flex-col px-3">
          
            <h2 class="text-blue-200 text-md font-bold inline-flex"><CodeIcon class="me-3 sm:h-7 size-16" alt="Flowbite Logo" />
              MsC. en Ingeniería de Software y Sistemas Informáticos</h2>
            <h2 class="text-md font-bold text-yellow-100 mt-4 inline-flex"><DnaIcon class="me-3 sm:h-7" alt="Flowbite Logo" />
              Ingeniero Biomédico</h2>
            <h2 class="my-5 inline-flex text-md font-bold"><ColombiaIcon class="me-3 sm:h-7" alt="Flowbite Logo" />
              Colombia</h2>
        </div>
        
      </div>
        <div class="flex flex-col">
            <nav class="flex justify-center gap-2 my-4">
                <SocialPill href="mailto:andres.alejo.yela@gmail.com">
                  <MailIcon class="size-5" />
                </SocialPill>
                <SocialPill href="https://www.linkedin.com/in/alejandro-yela/">
                  <LinkedInIcon class="size-5" />
                </SocialPill>
                <SocialPill href="https://github.com/AlejoYela">
                  <GithubIcon class="size-5" />
                </SocialPill>
              </nav>
              <a type="button" download href="CV Alejandro Yela.pdf" class="text-white bg-white/10 border border-white focus:outline-none hover:bg-white hover:text-gray-900 transition focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm py-2.5 mb-4 inline-flex items-center justify-center"><PdfIcon class="size-5" />Descargar CV</a>
              <a type="button" href="mailto:andres.alejo.yela@gmail.com" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-700 hover:text-white hover:bg-white/10 transition focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm py-2.5 mb-4 flex items-center justify-center">Contáctame</a>
        </div>
    </div>
</aside>

<style>
    span{
  display: block;
  font-family: monospace;
  white-space: nowrap;
  border-right: 2px solid;
  width: 15ch;
  
  animation: typing 2s steps(15), blink .5s infinite step-end alternate;
  overflow: hidden;
}

@keyframes typing {
  from {width: 0}
}

@keyframes blink{
  50% {border-color: transparent}
}
</style>
